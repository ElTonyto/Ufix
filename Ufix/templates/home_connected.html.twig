{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Annonces
{% endblock %}

{% block navbar %}
	{{ parent() }}
	<div class="container-is-fluid extended">
		<p class="title has-text-centered">Annonces</p>
	</div>
{% endblock %}

{% block body %}
	<div
		class="container is-fluid-without-padding">
		<!-- Top part-->
		<div class="columns is-centered p-3t">
			<div class="column is-4" id="search_bar">
				<article class="panel">
					<p class="panel-tabs">
						<a class="is-active">Tous</a>
						<a>Mobile</a>
						<a>Ordinateur</a>
						<a>Tablette</a>
					</p>
					<div class="panel-block">
						<p class="control has-icons-left">
							<input class="input is-dark" type="text" placeholder="Search"/>
							<span class="icon is-left">
								<i class="fas fa-search" aria-hidden="true"></i>
							</span>
						</p>
					</div>
				</article>
			</div>
		</div>
		<!-- Grid of items-->
		<div class="columns">
			<div class="column is-10 is-offset-1">
				<div class="columns is-mobile is-multiline products">
					{% for ad in ads %}
						<a class="column is-2-desktop is-3-tablet is-6-mobile" href="{{ path('to_repair', { 'id': ad.id}) }}">
							<div class="card all-ads">
								<div class="card-image">
									<figure class="image">
										<img src="{{ asset('img/iphone5.png') }}" alt="Iphone 5">
									</figure>
								</div>
								<div class="card-content">
									<div class="media">
										<div class="media-content has-text-centered">
											<p class="title to-repare">{{ad.productName}}</p>
											<p class="subtitle">{{ad.productBreakDescription}}</p>
											<p class="susbtitle">{{ad.productPrice}} €</p>
											<p class="susbtitle">{{ad.owner.email}}</p>
										</div>
									</div>
								</div>
							</div>
						</a>

						
						{# <tr>
							<td class="text-center" scope="row">{{ securityDoor.id }}</td>
							<td>{{ securityDoor.reference }}</td>
							<td>{{ securityDoor.name }}</td>
							<td>{{ securityDoor.length }}</td>
							<td>{{ securityDoor.width }}</td>
							<td>{{ securityDoor.height }}</td>
							<td>{{ securityDoor.weight }}</td>
							<td>{{ securityDoor.color }}</td>
							<td>{{ securityDoor.price }}
								€</td>
							<td class="text-center">
								<div class="row">
									<div class="col-xl-6">
										<a type="button" href="{{ path('admin_articles_details_page', {'id' : securityDoor.id}) }}">
											<i class="far fa-edit fa-lg"></i>
										</a>
									</div>
									<div class="col-xl-6">
										<a type="button" href="{{ path('admin_home_page') }}">
											<i class="fas fa-times fa-lg" style="color:red;"></i>
										</a>
									</div>
								</div>
							</td>
						</tr> #}

					{% endfor %}
					{# COLUMN #}
					
				</div>
			</div>
		</div>
	</div>
{% endblock %}
