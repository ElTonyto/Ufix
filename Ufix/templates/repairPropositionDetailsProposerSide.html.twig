{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} - Sélection du réparateur
{% endblock %}



{% block navbar %}
{{ parent() }}
<div class="container-is-fluid extended">
	<p class="title has-text-centered">détails de la proposition de réparation</p>
</div>
{% endblock %}

{% block body %}
<div class="container">
	<div class="card">
		<div class="card-content">
			<div class="content">
				<!-- Top of content page -->
				<div class="columns">
					<div class="column is-4 is-offset-4">
						<div class="columns">
							<div class="column is-6 has-text-centered">
								<img id="image-new-ad" src="{{ asset('img/ecran-casse.jpg') }}" alt="image produit">
							</div>
							<div class="column is-6">
								<p class="title">{{repairProposition.ad.productName}}</p>
                                <p class="subtitle">{{repairProposition.ad.productBreakDescription}}</p>
                                <p class="subtitle">{{repairProposition.ad.owner.firstName}}</p>
                                <p class="subtitle">{{repairProposition.ad.owner.lastName}}</p>
							</div>
						</div>
					</div>
				</div>
				<!-- Content -->
				<div class="columns">
					<!-- Left column -->
					<div class="column">
						
						<div class="is-scrollable">
								<div class="columns is-vcentered">
                                    <p>Votre proposition</p>
									<div class="column is-3 has-text-centered">
										<p class="subtitle">{{repairProposition.price}}</p>
                                    </div>
                                    <div class="column is-3 has-text-centered">
										<p class="subtitle">{{repairProposition.description}}</p>
									</div>
								</div>
						</div>
					</div>
					
					

				</div>
			</div>
		</div>

		<!-- Bottom of the page -->
		<footer class="custom-card-footer">
			<div class="columns is-vcentered">
				
				<div class="column is-4 has-text-centered">
					<a class="button is-outlined is-rounded is-info" href="{{ path("contact_seller_with_repair") }}">
						<span>Contacter le propriétaire de l'annonce</span>
						<span class="icon">
							<i class="fas fa-angle-right"></i>
						</span>
					</a>
				</div>
			</div>
		</footer>
	</div>
</div>


{% endblock %}