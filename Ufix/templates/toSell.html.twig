									<tr>
										<th>marque</th>
										<th>modèle</th>
									</tr>

								</thead>
								<tbody>
									<tr>
										<td>Apple</td>
										<td>Iphone 5</td>
									</tr>
								</tbody>
								<thead>
									<tr>
										<th>couleur</th>
										<th>capacité</th>
									</tr>

								</thead>
								<tbody>
									<tr>
										<td>Blanc</td>
										<td>64 Go</td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="column">
							<h2 class="is-uppercase">Description</h2>
