{% extends 'base.html.twig' %}

{% block title %}
	Annonce
{% endblock %}

{% block navbar %}
	{{ parent() }}
	<div class="container-is-fluid extended">
		<p class="title has-text-centered">Annonce</p>
	</div>
{% endblock %}

{% block body %}
	<div class="container">
		<div
			class="card">
			<!-- Card header-->
			<div class="card-header">
				<div class="columns">
					<div class="column is-half is-offset-one-quarter has-text-centered">
						<div class="columns">
							<div class="column has-text-right-desktop is-offset-2-desktop">
								<p class="title">Iphone 5</p>
								<p class="subtitle">Ecran cassé</p>
							</div>
							<div class="column has-text-left-desktop is-paddingless-mobile">
								<span class="fa-stack">
									<i class="fas fa-circle green-circle fa-2x"></i>
									<i class="fas fa-tools fa-stack-1x fa-inverse"></i>
								</span>
							</div>
						</div>
						<div class="is-color6 is-4">
							<img src="{{ asset('img/iphone5.png') }}" alt="Image Iphone 5">
						</div>
					</div>
				</div>
			</div>
			<hr
			class="is-hidden-mobile"/>
			<!-- Content -->
			<div class="card-content">
				<div class="content">
					<div
						class="columns">
						<!-- Column onformation -->
						<div class="column is-2-desktop is-hidden-mobile"></div>
						<div class="column is-3">
							<p class="subtitle is-uppercase">Description</p>
							<p>Iphone 5 avec un problème matériel, le téléphone s'allume et se charge mais reste bloqué sur l'écran de recherche du serveur d'activation d'Apple</p>
						</div>
						<!-- Column specification-->
						<div class="column is-4">
							<p class="subtitle is-uppercase">Détails Techniques</p>
							<table class="has-text-centered">
								<thead>
									<tr>
										<th>marque</th>
										<th>modèle</th>
									</tr>

								</thead>
								<tbody>
									<tr>
										<td>Apple</td>
										<td>Iphone 5</td>
									</tr>
								</tbody>
								<thead>
									<tr>
										<th>couleur</th>
										<th>capacité</th>
									</tr>

								</thead>
								<tbody>
									<tr>
										<td>Blanc</td>
										<td>64 Go</td>
									</tr>
								</tbody>
							</table>
						</div>
						<!-- Column seller -->
						<div class="column is-3">
							<p class="subtitle is-uppercase">Vendeur</p>
							<span class="tag orange">4/5</span>
							<p>Pascal MOLIPOU
								<br>
								Pessac - 33 600</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Card footer -->
			<footer
				class="custom-card-footer">
				<!-- For desktop -->
				<div class="columns is-marginless is-vcentered is-variable is-hidden-mobile">
					<div class="column is-1">
						<span class="fa-stack">
							<i class="fas fa-circle orange-circle fa-2x"></i>
							<i class="far fa-heart fa-stack-1x fa-inverse"></i>
						</span>
					</div>
					<div class="column is-2 is-offset-8">
						<a href="{{ path("contact_repair") }}">
							<button class="button is-outlined is-rounded is-info">
								<span>Réparer</span>
								<span class="icon">
									<i class="fas fa-angle-right"></i>
								</span>
							</button>
						</a>
					</div>
				</div>
				<!-- For mobile -->
				<div class="columns is-marginless is-vcentered is-variable is-mobile is-hidden-tablet is-hidden-desktop">
					<div class="column is-2">
						<span class="fa-stack">
							<i class="fas fa-circle orange-circle fa-2x"></i>
							<i class="far fa-heart fa-stack-1x fa-inverse"></i>
						</span>
					</div>
					<div class="column is-4 is-offset-6">
						
							<a class="button is-outlined is-rounded is-info" href="{{ path("contact_repair") }}">
								<span>Réparer</span>
								<span class="icon">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						
					</div>
				</div>
			</footer>
		</div>
	</div>
</div></div>{% endblock %}
